{% extends 'base.html.twig' %}

{% block title %}Книга{% endblock %}

{% block body %}
    <div class="container">
        <h2 class="text-center mt-5 mb-3">Данные книги</h2>
        <div class="card">
            <div class="card-header">
                <a class="btn btn-outline-info float-right" href="{{ path('app_book_index') }}">
                    Показать список книг
                </a>
            </div>
            <div class="card-body">
                <b class="text-muted">Название:</b>
                <p>{{ book.name }}</p>
                <b class="text-muted">Описание:</b>
                <p>{{ book.description }}</p>

                <b class="text-muted">Год публикации:</b>
                <p>{{ book.yearPublic }}</p>
                <b class="text-muted">Список авторов:</b>
                <p>{{ book.getAuthorsList() }}</p>
            </div>
            <b class="text-muted">Обложка:</b>
            <img  src="data:image/jpg;base64,{{ book.image}}" alt="1" />
        </div>
    </div>
{% endblock %}